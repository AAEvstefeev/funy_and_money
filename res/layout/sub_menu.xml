<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Button
       android:id="@+id/like"
       android:layout_marginLeft="25dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
		android:background="@drawable/like_key_p"
		android:paddingRight="8dip"  
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
         />

    <Button
       android:id="@+id/repost"
        
         android:layout_width="35dp"
        android:layout_height="35dp"
       android:background="@drawable/repost_key_p"
         android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         />

    <Button
       android:id="@+id/download"
      android:layout_marginRight="25dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
      
        android:background="@drawable/download_key_p" 
         android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/like_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/like"
        android:layout_alignBottom="@+id/like"
        android:layout_toRightOf="@+id/like"
        android:textColor="@color/simple_grey"
        android:text="0" />

</RelativeLayout>